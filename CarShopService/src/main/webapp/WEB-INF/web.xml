<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <!-- Welcome to file -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <!-- User Registration and Login -->
  <servlet>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>org.example.servlets.UserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/api/users/*</url-pattern>
  </servlet-mapping>

  <!-- Car Management -->
  <servlet>
    <servlet-name>CarServlet</servlet-name>
    <servlet-class>org.example.servlets.CarServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CarServlet</servlet-name>
    <url-pattern>/api/cars/*</url-pattern>
  </servlet-mapping>

  <!-- Order Processing -->
  <servlet>
    <servlet-name>OrderServlet</servlet-name>
    <servlet-class>org.example.servlets.OrderServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OrderServlet</servlet-name>
    <url-pattern>/api/orders/*</url-pattern>
  </servlet-mapping>


  <!-- Logging Aspect Listener -->
  <listener>
    <listener-class>org.example.loggingstarter.LoggingAspect</listener-class>
  </listener>

  <!-- Logging Aspect Listener -->
  <listener>
    <listener-class>org.example.mapper.UserMapper</listener-class>
  </listener>

</web-app>
